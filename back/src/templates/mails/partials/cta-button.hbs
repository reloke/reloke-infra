{{!--
  CTA Button Partial
  Variables: ctaUrl, ctaText
  Optional: ctaStyle (default: primary)
--}}
<table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 30px 0;">
    <tr>
        <td align="center">
            <a href="{{ctaUrl}}"
               class="cta-button"
               style="display: inline-block; background-color: {{#if ctaStyle}}{{#if (eq ctaStyle 'secondary')}}#2C2825{{else}}#C25E46{{/if}}{{else}}#C25E46{{/if}}; color: #ffffff !important; padding: 16px 40px; border-radius: 8px; text-decoration: none; font-weight: 600; font-size: 16px; font-family: 'Inter', Helvetica, Arial, sans-serif; text-align: center; mso-padding-alt: 0; transition: background-color 0.2s ease;">
                <!--[if mso]>
                <i style="letter-spacing: 40px; mso-font-width: -100%; mso-text-raise: 30pt;">&nbsp;</i>
                <![endif]-->
                <span style="mso-text-raise: 15pt;">{{ctaText}}</span>
                <!--[if mso]>
                <i style="letter-spacing: 40px; mso-font-width: -100%;">&nbsp;</i>
                <![endif]-->
            </a>
        </td>
    </tr>
</table>
